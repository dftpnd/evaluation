$bg-active-star = linear-gradient( 0, rgb(255,108,0) 0%, rgb(255,246,0) 100%);
$bg-default-star = linear-gradient( 0, rgb(113,113,113) 0%, rgb(213,213,213) 100%);

.evaluation
	display flex
	flex-direction row-reverse
	justify-content flex-end
	list-style none

	&__star
		$star-points = 50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%;
		pointer-events none
		width 16px
		height 16px
		background black
		transition: all .3s ease;
		clip-path: polygon($star-points);
		//work for postCss
		-webkit-clip-path: polygon($star-points);

	&__item
		cursor pointer
		&:not(:first-child)
			margin-right 2px

		.evaluation__star
			background $bg-default-star

		&--active .evaluation__star,
		&--active ~ & .evaluation__star
			background $bg-active-star

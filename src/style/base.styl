*
	margin 0
	padding 0
	box-sizing border-box

body
	font-size 100%
	height 100vh

.some-rating
	display flex
	justify-content center
	margin 100px auto

	&--dark
		background black
		.evaluation__item
			.evaluation__star
				background green

			&--active .evaluation__star,
			&--active ~ .evaluation__item .evaluation__star
				background red

	&--light
		background lightcyan
		.evaluation__item
			.evaluation__star
				background lightgray

			&--active .evaluation__star,
			&--active ~ .evaluation__item .evaluation__star
				background lightcoral
